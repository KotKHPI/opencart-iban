## Copy to dev_oc4/.env and run docker compose with: --env-file dev_oc4/.env
##
## Example:
##   docker compose --env-file dev_oc4/.env -f dev_oc4/docker-compose.yml up -d --build
##   docker compose --env-file dev_oc4/.env -f dev_oc4/docker-compose.yml -f dev_oc4/docker-compose.dev.yml up -d --build

# OpenCart version (git tag from https://github.com/opencart/opencart)
OPENCART_VERSION=4.1.0.3

# HTTP base URL that OpenCart writes into config.php (must end with /)
OPENCART_PORT=8080
OPENCART_HTTP_SERVER=http://localhost:8080/

# Admin user created by installer
OPENCART_USERNAME=admin
OPENCART_PASSWORD=admin
OPENCART_ADMIN_EMAIL=admin@example.com

# Install language (must exist as install/opencart-<language>.sql)
OPENCART_LANGUAGE=en-gb

# Database
DB_DRIVER=mysqli
DB_HOSTNAME=db
DB_PORT=3306
DB_DATABASE=opencart
DB_USERNAME=opencart
DB_PASSWORD=opencart
DB_PREFIX=oc_

# Xdebug (optional)
# Enable by setting XDEBUG_MODE=debug,develop and configuring your IDE to listen on port 9003.
XDEBUG_MODE=off
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
PHP_IDE_SERVER_NAME=opencart_oc4
