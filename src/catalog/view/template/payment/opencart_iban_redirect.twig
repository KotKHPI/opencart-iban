<div class="d-flex align-items-center gap-2">
  <div class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></div>
  <span>{{ text_redirecting }}</span>
</div>

<form id="opencart-iban-form" action="{{ action }}" method="post">
  <input name="code" type="text" value="{{ code }}" hidden />
  <input name="iban" type="text" value="{{ iban }}" hidden />
  <input name="amount" type="text" value="{{ amount }}" hidden />
  <input name="purpose" type="text" value="{{ purpose }}" hidden />
  <input name="x-client-key" type="text" value="{{ x_client_key }}" hidden />
  <input name="x-client-name" type="text" value="{{ x_client_name }}" hidden />
  <input name="redirect" type="text" value="{{ redirect }}" hidden />

  <div id="opencart-iban-fallback" class="mt-3 d-none">
    <p class="text-muted mb-2">{{ text_redirect_notice }}</p>
    <button class="btn btn-primary">{{ button_pay }}</button>
  </div>

  <noscript>
    <div class="mt-3">
      <p class="text-muted mb-2">{{ text_redirect_notice }}</p>
      <button class="btn btn-primary">{{ button_pay }}</button>
    </div>
  </noscript>
</form>

<script type="text/javascript">
(function() {
  var form = document.getElementById('opencart-iban-form');
  var fallback = document.getElementById('opencart-iban-fallback');

  window.setTimeout(function() {
    fallback.classList.remove('d-none');
  }, 2000);

  form.submit();
})();
</script>
